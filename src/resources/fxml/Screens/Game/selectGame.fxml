<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import main.Constants?>

<AnchorPane 
  id = "anchorPane" 
  prefHeight="640" prefWidth="1024" 
  xmlns="http://javafx.com/javafx/8" 
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="main.UI.Controller.Screens.Game.SelectGame"
  stylesheets="resources/css/select.css">

<Button layoutX="17.78" layoutY="17.78" onAction="#homeStarted"
        style="-fx-background-color: transparent;">
    <graphic>
        <ImageView fitWidth="42.67" fitHeight="42.67">
            <Image url="resources/icons/chevron.png" />
        </ImageView>
    </graphic>
</Button>

<Text fx:id="intro" layoutX="431.64" layoutY="60"
        style="-fx-font-size: 24.89px;
               -fx-font-family: 'Montserrat SemiBold'">
    Choose your
</Text>

<Text fx:id="fighter" layoutX="408" layoutY="130"
        style="-fx-font-size: 54.76px; -fx-font-weight: bold;" text="fighter">
     <fill>
            <LinearGradient startX="0" startY="0" endX="1" endY="0">
                <stops>
                    <Stop offset="0" color="#FF968C"/>
                    <Stop offset="1" color="#FF4D56"/>
                </stops>
            </LinearGradient>
        </fill>
</Text>

<Button  fx:id="choice" alignment="CENTER" 
         layoutX="110.22" layoutY="191.29" 
         mnemonicParsing="false" onAction="#choiceStarted"
         prefHeight="378.31" prefWidth="372.62"
         styleClass="select-box" />

<ImageView fx:id="image" fitWidth="292.27" fitHeight="344.89"
             layoutX="147.2" layoutY="191.29"
             preserveRatio="true">
    <Image url="resources/image/catGame.png"/>
</ImageView>

<Button  fx:id="order" alignment="CENTER" 
         layoutX="549.69" layoutY="191.29" 
         mnemonicParsing="false" onAction="#orderStarted"
         prefHeight="378.31" prefWidth="372.62"
         styleClass="select-box" />

<ImageView fx:id="image" fitWidth="292.27" fitHeight="349.16"
             layoutX="595.2" layoutY="187.02"
             preserveRatio="true">
    <Image url="resources/image/bearGame.png"/>
</ImageView>

</AnchorPane>
    